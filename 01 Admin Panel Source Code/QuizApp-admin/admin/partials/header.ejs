<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed">
    <script type="text/javascript">
        function disableBackButton() {
            window.history.forward();
        }
        setTimeout(disableBackButton(), 0);

        function handleChangePassword() {
            $('#modalChangePassword').modal('show');
        }

        function checkPassword() {
            let enter = $('#newPassword').val()
            let reEnter = $('#reEnterPassword').val()
            if (reEnter != '') {
                if (enter == reEnter) {
                    $('#reEnterPassword').removeClass("is-invalid")
                    $('#reEnterPassword').addClass('is-valid')
                } else {
                    $('#reEnterPassword').addClass('is-invalid')
                    $('#reEnterPassword').removeClass('is-valid')
                }
            }
        }
    </script>
    <div class="wrapper">

        <!-- Preloader -->
        <% if (pageName==='dashboard' ) { %>
            <div class="preloader flex-column justify-content-center align-items-center">
                <img class="animation__shake" src="<%= app.appIcon %>" alt="App_Icon" height="60" width="60">
            </div>
            <% } %>

