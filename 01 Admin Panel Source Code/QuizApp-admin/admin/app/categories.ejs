<% if (user) { %>
    <%- include('../partials/header.ejs') %>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">Categories</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <button type="button" class="btn btn-primary btn-block" data-toggle="modal"
                                    data-target="#modalAddCategory">
                                    <i class="fas fa-plus">&nbsp;</i>
                                    Add Category
                                </button>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <!-- Small boxes (Stat box) -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <% if (data.length> 0) { %>
                                        <table id="example1" class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Category Image</th>
                                                    <th>Category Name</th>
                                                    <th>Feature Category <span class="fas fa-info-circle ml-1"
                                                            data-toggle="tooltip" data-placement="top"
                                                            title="Featured Category Shown at Home Screen"></span>
                                                    </th>
                                                    <th>Active</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for( let index=0; index < data.length; index++ ) { %>
                                                    <tr>
                                                        <td>
                                                            <%= index + 1 %>
                                                        </td>
                                                        <td>
                                                            <div class="user-block">
                                                                <img src="<%= data[index].image %> " class="img-circle"
                                                                    alt="profile_pic" />
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <%= data[index].name %>
                                                        </td>
                                                        <td>
                                                            <input type="checkbox"
                                                                onchange="handleFeatureChange('<%=index%>')"
                                                                name="feature<%= index %>" <%=data[index].isFeature
                                                                ? 'checked' : 'unchecked' %> data-bootstrap-switch />
                                                        </td>
                                                        <td>
                                                            <input type="checkbox"
                                                                onchange="handleStatusChange('<%=index%>')"
                                                                name="status<%= index %>" <%=data[index].isActive
                                                                ? 'checked' : 'unchecked' %> data-bootstrap-switch />
                                                        </td>
                                                        <td>
                                                            <div class="timeline-footer">
                                                                <button class="btn btn-primary btn-sm"
                                                                    onclick="handleEdit('<%= index %>')">Edit</button>
                                                                <button class="btn btn-danger btn-sm"
                                                                    onclick="handleDelete('<%= index %>')">Delete</button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                            </tbody>
                                        </table>
                                        <% } else { %>
                                            <div class="row">
                                                <div class="offset-4 col-4 text-center">
                                                    <label
                                                        class="d-flex justify-content-center align-items-center text-muted"
                                                        for="inputSuccess">
                                                        <i class="fas fa-ban mr-3" style="font-size: xxx-large;"></i>
                                                        No Category Found
                                                    </label>
                                                </div>
                                            </div>
                                            <% } %>

                                </div>
                                <!-- /.card-body -->
                            </div>
                        </div>
                    </div>
                    <!-- /.row -->
                </div>
            </section>
            <!-- /.content -->
            <div class="modal fade" id="modalAddCategory" aria-modal="true" role="dialog"
                style="padding-right: 17px; display: none;">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Add Category</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                        <form id="formAddCategory" action="/addCategory" method="POST" enctype="multipart/form-data">
                            <div class="modal-body">
                                <div class="form-group">
                                    <label for="categoryName">Category Name</label>
                                    <input type="text" class="form-control" id="categoryName" name="categoryName"
                                        placeholder="Enter Category Name" required>
                                </div>
                                <div class="form-group">
                                    <label>Category Image</label>
                                    <div class="input-group custom-file-button">
                                        <label class="input-group-text" for="categoryImage">Choose Image</label>
                                        <input type="file" class="form-control" id="categoryImage" accept="image/*"
                                            name="categoryImage" onchange="handlePickImage(1)" style="display: none;">
                                    </div>
                                    <img class="img-fluid mt-3" id="imageAtCreate" src="" />
                                </div>
                            </div>
                            <div class="modal-footer justify-content-between">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>

            <div class="modal fade" id="modalUpdateCategory" aria-modal="true" role="dialog"
                style="padding-right: 17px; display: none;">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Update Category</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                        <form id="formUpdateCategory" action="/updateCategory" method="POST"
                            enctype="multipart/form-data">
                            <div class="modal-body">
                                <input type="text" id="_id" name="_id" style="display: none;">
                                <div class="form-group">
                                    <label for="newCategoryName">Category Name</label>
                                    <input type="text" class="form-control" id="newCategoryName" name="categoryName"
                                        placeholder="Enter Category Name" required>
                                </div>
                                <div class="form-group">
                                    <label>Category Image</label>
                                    <div class="input-group custom-file-button">
                                        <label class="input-group-text" for="newCategoryImage">Change Image</label>
                                        <input type="file" class="form-control" accept="image/*" id="newCategoryImage"
                                            name="newCategoryImage" onchange="handlePickImage(2)"
                                            style="display: none;">
                                    </div>
                                    <img class="img-fluid mt-3" id="imageAtUpload" src="" />
                                </div>
                            </div>
                            <div class="modal-footer justify-content-between">
                                <button type="reset" class="btn btn-default" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
        </div>
        <!-- /.content-wrapper -->
        <script type="text/javascript">
            let data = <%- JSON.stringify(data) %>

            function handlePickImage(pickFor) {
                let reader = new FileReader();
                switch (pickFor) {
                    case 1:
                        reader.readAsDataURL(document.getElementById('categoryImage').files[0]);
                        reader.onload = function (e) {
                            document.getElementById('imageAtCreate').src = e.target.result;
                        }
                        break;
                    case 2:
                        reader.readAsDataURL(document.getElementById('newCategoryImage').files[0]);
                        reader.onload = function (e) {
                            document.getElementById('imageAtUpload').src = e.target.result;
                        }
                }
            }

            function handleEdit(index) {
                document.getElementById('_id').value = data[index]._id
                document.getElementById('newCategoryName').value = data[index].name
                document.getElementById('imageAtUpload').src = data[index].image
                $('#modalUpdateCategory').modal('show');
            }

            function handleFeatureChange(index) {
                $.ajax({
                    url: `/category/feature/${data[index]._id}`,
                    type: 'PATCH',
                    data: null,
                    contentType: 'application/json',
                    success: function (data) {
                        toastr.success(data.msg)
                    },
                    error: function (err) {
                        toastr.error(err.responseJSON.err_msg)
                    }
                })
            }

            function handleStatusChange(index) {
                $.ajax({
                    url: `/category/status/${data[index]._id}`,
                    type: 'PATCH',
                    data: null,
                    contentType: 'application/json',
                    success: function (data) {
                        toastr.success(data.msg)
                    },
                    error: function (err) {
                        toastr.error(err.responseJSON.err_msg)
                    }
                })
            }

            function handleDelete(index) {
                $.ajax({
                    url: `/category/${data[index]._id}`,
                    type: 'DELETE',
                    data: null,
                    contentType: 'application/json',
                    success: function (data) {
                        toastr.success(data.msg)
                        setTimeout(() => {
                            window.location.reload()
                        }, 2000)
                    },
                    error: function (err) {
                        toastr.error(err.responseJSON.err_msg)
                    }
                })
            }

        </script>
        <%- include('../partials/footer.ejs') %>
            <% } else { %>
                <%- include('../auth/login.ejs') %>
                    <% } %>