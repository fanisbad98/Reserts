<% if (user) { %>
    <%- include('../partials/header.ejs') %>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">Withdrawals</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                                <li class="breadcrumb-item active">withdrawals</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <!-- Small boxes (Stat box) -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <table id="example1" class="table table-bordered table-striped projects">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>User</th>
                                                <th>Payment Gateway</th>
                                                <th>Send to</th>
                                                <th>Amount</th>
                                                <th>Request Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for( let i=0; i < data.length; i++ ) { %>
                                                <tr>
                                                    <td>
                                                        <%= i+1 %>
                                                    </td>
                                                    <td>
                                                        <img src="<%= data[i].user?.profilePic %>" alt="profile_pic"
                                                            class="img-circle img-size-32 mr-1">
                                                        <%= data[i].user?.name %>
                                                    </td>
                                                    <td>
                                                        <img src="<%= data[i].paymentMethod?.image %>" alt="profile_pic"
                                                            class="img-circle img-size-32 mr-1">
                                                        <%= data[i].paymentMethod?.name %>
                                                    </td>
                                                    <td>
                                                        <%= data[i].paymentVia %>
                                                    </td>
                                                    <td>
                                                        <%= data[i].amount %>
                                                    </td>
                                                    <td>
                                                        <span
                                                            class="<%= data[i].reqStatus == 'Approved' ? 'badge badge-success' : data[i].reqStatus == 'Pending' ? 'badge badge-warning' : 'badge badge-danger' %>">
                                                            <%= data[i].reqStatus %>
                                                        </span>
                                                    </td>
                                                    <td class="project-actions">
                                                        <button class="btn btn-success"
                                                            onclick="updateStatus('<%= data[i]._id %>','Approved')"
                                                            <%=data[i].reqStatus!=='Pending' ? 'disabled' :"" %>
                                                            >Approve</button>
                                                        <button class="btn btn-danger"
                                                            onclick="updateStatus('<%= data[i]._id %>','Rejected')"
                                                            <%=data[i].reqStatus!=='Pending' ? 'disabled' :"" %>
                                                            >Reject</button>
                                                    </td>
                                                </tr>
                                                <% } %>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>#</th>
                                                <th>User</th>
                                                <th>Payment Gateway</th>
                                                <th>Send to</th>
                                                <th>Amount</th>
                                                <th>Request Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                        </div>
                    </div>
                    <!-- /.row -->
                </div>
            </section>
            <!-- /.content -->
        </div>

        <script type="text/javascript">
            function updateStatus(id, status) {
                const data = {
                    status
                }
                $.ajax({
                    url: `/withdraw/${id}`,
                    type: 'PATCH',
                    data: JSON.stringify(data),
                    contentType: 'application/json',
                    success: function (data) {
                        toastr.success(data.msg)
                        setTimeout(() => {
                            window.location.reload()
                        }, 2000)
                    },
                    error: function (err) {
                        $('#modalAddQuestion').modal('hide');
                        toastr.error(err.responseJSON.err_msg)
                    }
                })
            }
        </script>

        <%- include('../partials/footer.ejs') %>
            <% } else { %>
                <%- include('../auth/login.ejs') %>
                    <% } %>